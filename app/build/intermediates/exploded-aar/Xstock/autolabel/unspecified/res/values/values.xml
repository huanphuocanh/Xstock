<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="default_background_label">#ff303030</color>
    <declare-styleable name="LabelsView"><attr format="integer" name="max_labels"/><attr format="boolean" name="show_cross"/><attr format="reference" name="icon_cross"/><attr format="color" name="text_color"/><attr format="dimension" name="text_size"/><attr format="reference" name="label_background_res"/><attr format="boolean" name="label_clickable"/><attr format="dimension" name="label_padding"/></declare-styleable>
    <dimen name="icon_cross">23dp</dimen>
    <dimen name="label_title_size">14sp</dimen>
    <dimen name="margin_between_labels">3dp</dimen>
    <dimen name="padding_icon_cross">5dp</dimen>
    <dimen name="padding_label_view">10dp</dimen>
    <string name="cross">Cross</string>
    <style name="CrossImageView">
        <item name="android:paddingLeft">@dimen/padding_icon_cross</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/cross</item>
    </style>
    <style name="Label">
        <!--<item name="android:padding">@dimen/padding_label_view</item>-->
        <!--<item name="android:layout_margin">@dimen/margin_between_labels</item>-->
        <item name="android:background">@color/default_background_label</item>
    </style>
    <style name="LabelTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/label_title_size</item>
    </style>
</resources>